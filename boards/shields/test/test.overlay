#include <dt-bindings/zmk/matrix_transform.h> // Put this with the other includes at the top of your overlay

/ {

  test_kscan: kscan0 {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "col2row";
    wakeup-source;

    col-gpios = 
      <&xiao_d 4 (GPIO_ACTIVE_HIGH)>,
      <&xiao_d 3 (GPIO_ACTIVE_HIGH)>,
      <&xiao_d 7 (GPIO_ACTIVE_HIGH)>,
      <&xiao_d 6 (GPIO_ACTIVE_HIGH)>,
      <&xiao_d 5 (GPIO_ACTIVE_HIGH)>;

    row-gpios = 
      <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
      <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
      <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
      <&xiao_d 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
  };

  test_transform: keymap_transform0 {
    compatible = "zmk,matrix-transform";
    columns = <5>;
    rows = <4>;

    #map = <
    # RC(0,4) RC(0,3) RC(0,2) RC(0,1) RC(0,0) 
    # RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,0) 
    # RC(2,4) RC(2,3) RC(2,2) RC(2,1) RC(2,0) 
    # RC(3,4) RC(3,3) RC(3,2) 
    #>;


    map = <
     RC(0,0) RC(0,2) RC(0,3) RC(0,4) RC(0,5) 
     RC(1,0) RC(1,2) RC(1,3) RC(1,4) RC(1,5) 
     RC(2,0) RC(2,2) RC(2,3) RC(2,4) RC(2,5) 
                     RC(3,3) RC(3,4) RC(3,5) 
    >;
  };
  
  test_layout: physical_layout_0 {
    compatible = "zmk,physical-layout";
    display-name = "test";
    transform = <&test_transform>; // Label of the matrix transform for this layout
  };

  chosen {
    zmk,kscan = &test_kscan;
    zmk,physical-layout = &test_layout;
  };

};
